{
  "name": "epub-reader-g2",
  "version": "0.7.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --strictPort",
    "build": "vite build",
    "preview": "vite preview --host 0.0.0.0 --strictPort",
    "qr": "evenhub qr --port 5173 --path / -e",
    "init:evenhub": "evenhub init --output app.json",
    "pack": "npm run build && evenhub pack app.json ./dist --output epub-reader.ehpk",
    "pack:check": "evenhub pack app.json ./dist --check"
  },
  "dependencies": {
    "@evenrealities/even_hub_sdk": "^0.0.7",
    "@evenrealities/evenhub-cli": "^0.1.5",
    "bmp-js": "^0.1.0",
    "hyphenation.de": "^0.2.1",
    "hyphenation.en-us": "^0.2.1",
    "hyphenation.ru": "^0.2.1",
    "hyphenation.uk": "^0.2.1",
    "hypher": "^0.2.5",
    "jszip": "^3.10.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@evenrealities/evenhub-simulator": "^0.1.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0"
  }
}
